<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.text.Text?>
<VBox prefWidth="200" style="-fx-background-color: #f4f4f4;" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.redispulse.redispulse.controller.ConnectionsController">
    <VBox VBox.vgrow="ALWAYS">
        <ListView fx:id="listView" VBox.vgrow="ALWAYS">
            <items>
                <FXCollections fx:factory="observableArrayList">
                </FXCollections>
            </items>
        </ListView>
    </VBox>

    <Region prefHeight="20"/>
    <HBox alignment="CENTER">
        <Button text="Add new connection" HBox.hgrow="NEVER" onAction="#onAddConnectionPress"/>
    </HBox>
    <Region prefHeight="20"/>
</VBox>
